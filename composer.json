{
    "name": "valkey-glide/valkey-glide-compat",
    "description": "phpredis API compatibility layer for valkey-glide-php",
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.2"
    },
    "suggest": {
        "ext-valkey_glide": "Required for Valkey GLIDE backend",
        "ext-redis": "Fallback phpredis backend"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "ValkeyGlideCompat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ValkeyGlideCompat\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse"
    }
}
